<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_gravity="center_horizontal"
        android:padding="2dp">

    <ImageView
            android:id="@+id/list_item_beer_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:contentDescription="Beer Image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/list_item_beer_left_guideline"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:srcCompat="@drawable/bottle"/>

    <android.support.constraint.Guideline
            android:id="@+id/list_item_beer_left_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="64dp"/>

    <TextView
            android:id="@+id/list_item_beer_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:textSize="20sp"
            android:scrollHorizontally="true"
            android:layout_gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="Punk IPA"
            app:layout_constraintStart_toEndOf="@+id/list_item_beer_left_guideline"
            app:layout_constraintEnd_toStartOf="@+id/list_item_beer_right_guideline"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/list_item_beer_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="2dp"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="4.5%"
            app:layout_constraintStart_toEndOf="@+id/list_item_beer_left_guideline"
            app:layout_constraintTop_toBottomOf="@+id/list_item_beer_name"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/list_item_beer_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="2dp"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="FEB 2014"
            app:layout_constraintStart_toEndOf="@+id/list_item_beer_alcohol"
            app:layout_constraintTop_toBottomOf="@+id/list_item_beer_name"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
            android:id="@+id/list_item_beer_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:textSize="20sp"
            android:layout_gravity="start"
            android:maxLines="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="#300"
            app:layout_constraintStart_toEndOf="@+id/list_item_beer_date"
            app:layout_constraintEnd_toStartOf="@+id/list_item_beer_right_guideline"
            app:layout_constraintTop_toBottomOf="@+id/list_item_beer_name"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <android.support.constraint.Guideline
            android:id="@+id/list_item_beer_right_guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_end="64dp"/>

    <ImageView
            android:id="@+id/favourite_button"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:contentDescription="Favourite Icon"
            app:srcCompat="@drawable/ic_favorite_black_24dp"
            app:layout_constraintStart_toEndOf="@+id/list_item_beer_right_guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>